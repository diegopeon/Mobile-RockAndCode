<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_1_tela_06_background"
    tools:context=".tela06_intro05">

    <ImageView
        android:id="@+id/texto_nessa_edicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:contentDescription='texto "Nesta edição"'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_2_tela_03_texto_01" />

    <ImageView
        android:id="@+id/nome_do_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:contentDescription='texto com o nome do app'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_nessa_edicao"
        app:srcCompat="@drawable/_3_tela_03_nome" />

    <ImageView
        android:id="@+id/texto_ira_te_proporcionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:contentDescription='texto "irá te proporcionar"'
        app:layout_constraintBottom_toTopOf="@+id/texto_descricao_shows_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_do_app"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/_4_tela_03_texto_02" />

    <ImageView
        android:id="@+id/texto_descricao_shows_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:contentDescription='texto de descrição sobre o show'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_ira_te_proporcionar"
        app:srcCompat="@drawable/_5_tela_06_descricao" />

    <ImageView
        android:id="@+id/imagem_personagem_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:contentDescription='imagem de um personagem do rock'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_descricao_shows_intro"
        app:srcCompat="@drawable/_6_tela_06_boneco_rock" />

    <ImageButton
        android:id="@+id/botao_lets_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="116dp"
        android:contentDescription='botão com o texto "Lets Code"'
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_personagem_rock"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/_8_tela_06_botao_lets_code" />

</androidx.constraintlayout.widget.ConstraintLayout>